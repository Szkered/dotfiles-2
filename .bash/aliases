# Ubuntu stuff
alias msgs='sudo tail -f /var/log/messages | loco'
alias ds='dpkg -s'
alias ss='apt-cache search '
alias up='sudo aptitude update;sudo aptitude safe-upgrade'
alias dv='dpkg -s $@ | grep ^Version:'
alias dl='dpkg -L'
alias di='dpkg -l | grep $@'
alias inst='sudo aptitude install'
#
alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."
