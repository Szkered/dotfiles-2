# Aliases -*- mode: shell-script -*-
alias ls='ls --color=auto -hGF'
alias ll='ls -Alh'
alias l1='ls -1'
alias crontab='EDITOR=vi VISUAL=vi crontab'
alias e='emacsclient -n'
alias df='df -h'
alias top='xtitle Processes on $HOSTNAME && htop'
alias make='xtitle Making $(basename $PWD) ; make'
alias svn='EDITOR=vi VISUAL=vi svn'

alias diff='colordiff'

