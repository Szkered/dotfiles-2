loadplugins '\.(js|penta)$'
group user

set mapleader=","

set guioptions=BMCs
set showtabline=multitab

set hintkeys='asdfg;lkjh'

" highlighted search matches
set hlfind
nmap <silent> <CR> :nohlfind<CR>

" Don't close browser when you close the last tab
:set! browser.tabs.closeWindowWithLastTab=false

" Keys
map <Leader>b :toolbartoggle Bookmarks Toolbar<CR>
map <Leader>n :toolbartoggle Navigation Toolbar<CR>
map <Leader>m :toolbartoggle Menu Bar<CR>


colorscheme ambiance

